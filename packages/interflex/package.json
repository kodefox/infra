{
  "name": "interflex",
  "version": "0.0.1",
  "description": "A library for internationalization of React apps with a focus on unobtrusive devex",
  "author": "KodeFox <hello@kodefox.com> (https://github.com/kodefox/)",
  "scripts": {
    "build": "tsc -p . -m umd -d",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint --max-warnings 0 \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit -p .",
    "jest": "jest --coverage --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn jest"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "24.0.18",
    "concurrently": "4.1.2",
    "eslint": "6.7.2",
    "eslint-config-kodefox": "0.0.2",
    "jest": "24.9.0",
    "nodemon": "1.19.1",
    "prettier": "1.19.1",
    "ts-jest": "24.0.2",
    "typescript": "3.7.3"
  },
  "eslintConfig": {
    "extends": "kodefox"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "license": "MIT"
}
