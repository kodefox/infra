{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "types": ["react", "react-native", "jest"]
  },
  "exclude": ["example/", "lib/"]
}
