{
  "name": "naviflex",
  "version": "0.0.2",
  "description": "KodeFox Infrastructure Multi-platform Navigation",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "react-native": "src/index.ts",
  "types": "lib/typescript/index.d.ts",
  "author": "KodeFox",
  "license": "MIT",
  "files": ["lib/", "src"],
  "scripts": {
    "build": "yarn bob build",
    "prepare": "yarn build",
    "release": "release-it",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint": "eslint --max-warnings 0 \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit -p .",
    "test": "yarn format:check && yarn lint && yarn typecheck"
  },
  "peerDependencies": {
    "@react-navigation/native": "^5.0.0",
    "hookrouter": "^1.2.3"
  },
  "devDependencies": {
    "@react-native-community/bob": "0.8.0",
    "@react-navigation/native": "5.0.9",
    "@types/hookrouter": "2.2.1",
    "eslint": "6.8.0",
    "eslint-config-kodefox": "0.2.1",
    "hookrouter": "1.2.3",
    "prettier": "2.0.4",
    "react": "^16.12.0",
    "release-it": "12.4.3",
    "tsconfig-kodefox": "1.0.1",
    "typescript": "3.8.3"
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": ["commonjs", "module", "typescript"]
  },
  "eslintConfig": {
    "extends": "kodefox/react-native"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  }
}
