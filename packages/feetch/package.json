{
  "name": "feetch",
  "version": "0.0.0",
  "description": "KodeFox fetching library for REST API",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "lib/",
    "src/"
  ],
  "author": "KodeFox",
  "license": "MIT",
  "scripts": {
    "prepare": "bob build",
    "build": "yarn prepare",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint": "eslint --max-warnings 0 \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit -p .",
    "jest": "jest --coverage --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn jest"
  },
  "dependencies": {
    "runtypes": "^4.0.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-fetching-library": ">=1.5.0"
  },
  "devDependencies": {
    "@react-native-community/bob": "0.7.0",
    "@testing-library/react-hooks": "3.2.1",
    "@types/jest": "24.9.1",
    "@types/react": "16.9.19",
    "@typescript-eslint/eslint-plugin": "2.17.0",
    "@typescript-eslint/parser": "2.17.0",
    "eslint": "6.8.0",
    "eslint-config-kodefox": "0.1.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.18.0",
    "fetch-mock": "8.3.1",
    "jest": "24.9.0",
    "node-fetch": "2.6.0",
    "prettier": "1.19.1",
    "react": "16.12.0",
    "react-fetching-library": "1.5.14",
    "react-test-renderer": "16.12.0",
    "ts-jest": "24.2.0",
    "typescript": "3.7.5"
  },
  "eslintConfig": {
    "extends": "kodefox/react"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
