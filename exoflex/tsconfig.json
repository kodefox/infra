{
  "compilerOptions": {
    "noEmit": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["example/", "lib/"]
}
